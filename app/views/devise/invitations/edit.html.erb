 <div class="devise-form-container">
  <div class="devise-form">
    <br/>

    <h2 class="title is-4"><%= t "devise.invitations.edit.header" %></h2>

    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :invitation_token, readonly: true %>

      <% if f.object.class.require_password_on_accepting %>
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: "input" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "input" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: "button is-info" %>
      </div>
    <% end %>
  </div>
</div>
