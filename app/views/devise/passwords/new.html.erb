<div class="devise-form-container">
  <div class="devise-form">
    <br/>

    <h2 class="title is-4">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <p class="control has-icons-left">
          <%= f.email_field :email, placeholder: "Email", class: "input", autofocus: true, autocomplete: "email" %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </p>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "button is-info" %>
      </div>
    <% end %>

    <br/>
    <%= render "devise/shared/links" %>
  </div>
</div>
