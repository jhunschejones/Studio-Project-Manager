<li class="link link_<%= link.id %>">
  <span><%= link_to(link.text, link.url, target: "_blank") %></span>
  <%= link_to(edit_project_link_path(@project, link)) do %>
    <span class="edit icon has-text-grey-light">
      <i class="fas fa-pen"></i>
    </span>
  <% end %>
  <%= link_to(project_link_path(@project, link), method: :delete, remote: :true, data: { confirm: "Are you sure you want to delete the '#{link.text}' link? This action is permanent." }) do %>
    <button class="delete is-small"></button>
  <% end %>
</li>
