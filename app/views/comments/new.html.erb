<% if @track_version %>
  <%= render("projects/breadcrumbs", breadcrumbs: ProjectsHelper.breadcrumbs_for(project: @project, track: @track_version.track, track_version: @track_version, page_title: { text: "Add comment" })) %>
<% end %>

<div class="project-form">
  <h2 class="title is-4">Add a comment:</h2>

  <%= form_for(@comment, url: @form_url, remote: true) do |f| %>
    <div class="field">
      <%= f.rich_text_area :content %>
    </div>

    <div class="actions">
      <%= f.submit "Save", class: "button is-info" %>
    </div>
  <% end %>
  <br/>
</div>
