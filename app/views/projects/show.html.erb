<div class="project-details">
  <br/>
  <h1 class="title is-4 project-title"><%= @project.title %></h1>
  <p class="project-description"><%= @project.description %></p>
  <br/>
  <h3 class="title is-5 users-header">Users on this project</h3>
  <ul>
    <% @project.users.each do |user| %>
      <li>
        <%= user.name %>
        <% if user.is_project_owner?(@project) %>
          (owner)
        <% end %>
      </li>
    <% end %>
  </ul>
  <br/>
  <h3 class="title is-5 users-header">Links for this project</h3>
  <ul>
    <% @project.links.each do |link| %>
      <li><%= link_to(link.text, link.url, target: "_blank") %></li>
    <% end %>
  </ul>

  <br/>
  <%= link_to("Edit project", edit_project_path(@project), class: "button is-info") %>
</div>
