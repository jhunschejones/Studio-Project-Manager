<div class="create-project">
  <h2 class="title is-4">New project</h2>

  <%= form_for(@project, url: projects_path(@project)) do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, autocomplete: 'off', class: "input" %>
    </div>

     <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, autocomplete: 'off', class: "textarea" %>
    </div>

    <div class="actions">
      <%= f.submit "Create", class: "button is-info" %>
      <%= link_to "Back", projects_path, class: "button" %>
    </div>
  <% end %>
</div>
