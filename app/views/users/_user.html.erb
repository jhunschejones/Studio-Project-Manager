<li class="user user_<%= user.id %>">
  <span><%= user.name %></span>
  <% if user.id == current_user.id %>
    <%= link_to(user_path(current_user), class: "user-link has-text-grey-light") do %>
      <span class="icon is-small">
        <i class="fas fa-user"></i>
      </span>
    <% end %>
  <% else %>
    <%= link_to(project_remove_user_path(@project, user), method: :delete, remote: :true, data: { confirm: "Are you sure you want to remove '#{user.name}' from this project? This action is permanent." }) do %>
      <button class="delete is-small"></button>
    <% end %>
  <% end %>
</li>
