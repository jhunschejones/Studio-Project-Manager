var events = document.querySelector(".events");
while (events.firstChild) {
  events.removeChild(events.firstChild);
}
document.querySelector(".events").insertAdjacentHTML("beforeend", "<%= escape_javascript render(@project.events.sort_by(&:start_at), locals: { project: @project }) %>");
document.getElementsByName("event[title]")[0].value = "";
document.getElementById("event_description").value = "";
